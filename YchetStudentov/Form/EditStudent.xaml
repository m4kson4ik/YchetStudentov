        <Label Content="Бюджет:" HorizontalAlignment="Left" Height="26" Margin="151,373,0,0" VerticalAlignment="Top" Width="63"/>
        <Button Content="Обновить информацию" HorizontalAlignment="Left" Margin="193,404,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbFamily" HorizontalAlignment="Left" Margin="242,153,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbOtchestvo" HorizontalAlignment="Left" Margin="242,187,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbAdress" HorizontalAlignment="Left" Margin="565,238,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmbGragdanstvo" HorizontalAlignment="Left" Margin="541,277,0,0" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbPocta" HorizontalAlignment="Left" Margin="247,248,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cmbYearPostup" HorizontalAlignment="Left" Margin="255,288,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
