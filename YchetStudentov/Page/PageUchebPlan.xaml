<Page x:Class="YchetStudentov.Page.PageUchebPlan"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:YchetStudentov.Page"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageUchebPlan">

    <Grid Background="Gray">
        <DataGrid x:Name="GridUchebPlan" Margin="152,6,15,10" d:ItemsSource="{d:SampleData ItemCount=1}"/>
        <ComboBox x:Name="cmb_number_group" HorizontalAlignment="Left" Margin="10,261,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cmb_number_group_SelectionChanged"/>
        <ComboBox x:Name="cmbNameDisceplin" HorizontalAlignment="Left" Height="24" Margin="10,301,0,0" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="btnCreate" Content="Создать" HorizontalAlignment="Left" Margin="50,346,0,0" VerticalAlignment="Top" Click="btnCreate_Click"/>
        <Button x:Name="btImport" Content="Импорт" HorizontalAlignment="Left" Margin="50,371,0,0" VerticalAlignment="Top" Click="btImport_Click"/>

    </Grid>
</Page>
